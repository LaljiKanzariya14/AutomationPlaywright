{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "features/**/**.ts",
    "GenerateReport.js",
  ],
  "exclude": [
    "./node_modules/",
    "./dist/"
  ],
}